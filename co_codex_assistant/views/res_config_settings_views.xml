<odoo>
    <record id="res_config_settings_view_form_codex" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.codex</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='general_settings']" position="inside">
                <block title="Codex Assistant" name="codex_assistant_settings">
                    <setting string="LLM API Base URL" name="codex_api_base_setting">
                        <field name="codex_api_base" placeholder="https://api.provider.com/v1"/>
                        <div class="text-muted">Supports OpenAI-compatible endpoints or custom gateways.</div>
                    </setting>
                    <setting string="LLM Model" name="codex_api_model_setting">
                        <field name="codex_api_model" placeholder="model-name"/>
                    </setting>
                    <setting string="LLM API Key" name="codex_api_key_setting">
                        <field name="codex_api_key" password="True"/>
                    </setting>
                    <setting string="LLM Temperature" name="codex_temperature_setting">
                        <field name="codex_temperature"/>
                    </setting>
                    <setting string="Max Output Tokens" name="codex_max_tokens_setting">
                        <field name="codex_max_tokens"/>
                    </setting>
                    <setting string="HTTP Timeout (sec)" name="codex_timeout_setting">
                        <field name="codex_timeout"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
