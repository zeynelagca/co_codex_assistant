<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_cafeteria_balance_load_tree" model="ir.ui.view">
        <field name="name">cafeteria.card.balance.load.tree</field>
        <field name="model">cafeteria.card.balance.load</field>
        <field name="arch" type="xml">
            <tree string="Bakiye Yüklemeleri"
                  decoration-success="state=='confirmed'"
                  decoration-muted="state=='cancelled'">
                <field name="load_date"/>
                <field name="card_id"/>
                <field name="partner_id"/>
                <field name="load_type"/>
                <field name="month_period" optional="show"/>
                <field name="amount" sum="Toplam"/>
                <field name="used_amount" sum="Toplam"/>
                <field name="remaining_amount" sum="Toplam"/>
                <field name="transaction_count"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'confirmed'"
                       decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <record id="view_cafeteria_balance_load_form" model="ir.ui.view">
        <field name="name">cafeteria.card.balance.load.form</field>
        <field name="model">cafeteria.card.balance.load</field>
        <field name="arch" type="xml">
            <form string="Bakiye Yüklemesi">
                <header>
                    <button name="action_confirm"
                            string="Onayla"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel"
                            string="İptal Et"
                            type="object"
                            invisible="state == 'cancelled'"
                            confirm="Bu yüklemeyi iptal etmek istediğinizden emin misiniz?"/>
                    <button name="action_set_to_draft"
                            string="Taslağa Al"
                            type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_transactions" type="object" class="oe_stat_button" icon="fa-exchange">
                            <field name="transaction_count" widget="statinfo" string="İşlemler"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="card_id" required="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="load_type" required="1"/>
                            <field name="load_date" required="1"/>
                            <field name="amount" required="1"/>
                        </group>
                        <group>
                            <field name="month_period" invisible="load_type != 'monthly'"/>
                            <field name="monthly_allocation_id" invisible="load_type != 'monthly'" readonly="1"/>
                            <field name="balance_before" readonly="1" invisible="state == 'draft'"/>
                            <field name="balance_after" readonly="1" invisible="state == 'draft'"/>
                        </group>
                    </group>
                    <group string="Kullanım İstatistikleri" invisible="state != 'confirmed'">
                        <group>
                            <field name="used_amount" readonly="1"/>
                            <field name="remaining_amount" readonly="1"/>
                        </group>
                        <group>
                            <field name="transaction_count" readonly="1"/>
                        </group>
                    </group>
                    <group string="Açıklama">
                        <field name="note" nolabel="1" placeholder="Açıklama ekleyin..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_cafeteria_balance_load_search" model="ir.ui.view">
        <field name="name">cafeteria.card.balance.load.search</field>
        <field name="model">cafeteria.card.balance.load</field>
        <field name="arch" type="xml">
            <search string="Bakiye Yüklemeleri">
                <field name="card_id"/>
                <field name="partner_id"/>
                <field name="month_period"/>
                <filter name="filter_draft" string="Taslak" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_confirmed" string="Onaylandı" domain="[('state', '=', 'confirmed')]"/>
                <filter name="filter_cancelled" string="İptal Edildi" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <group expand="0" string="Grupla">
                    <filter name="group_card" string="Kart" context="{'group_by': 'card_id'}"/>
                    <filter name="group_partner" string="Müşteri" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_state" string="Durum" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_cafeteria_monthly_allocation_tree" model="ir.ui.view">
        <field name="name">cafeteria.monthly.balance.allocation.tree</field>
        <field name="model">cafeteria.monthly.balance.allocation</field>
        <field name="arch" type="xml">
            <tree string="Aylık Tahsisler" decoration-info="state=='suspended'" decoration-muted="state=='completed'">
                <field name="card_id"/>
                <field name="partner_id"/>
                <field name="monthly_amount"/>
                <field name="allocation_day"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="next_allocation_date"/>
                <field name="state" widget="badge"/>
                <field name="load_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_cafeteria_monthly_allocation_form" model="ir.ui.view">
        <field name="name">cafeteria.monthly.balance.allocation.form</field>
        <field name="model">cafeteria.monthly.balance.allocation</field>
        <field name="arch" type="xml">
            <form string="Aylık Bakiye Tahsisi">
                <header>
                    <button name="action_suspend" string="Askıya Al" type="object" class="btn-secondary"
                            invisible="state != 'active'"/>
                    <button name="action_activate" string="Aktif Et" type="object"
                            invisible="state != 'suspended'"/>
                    <button name="action_complete" string="Tamamlandı" type="object"
                            class="btn-secondary"
                            invisible="state == 'completed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,suspended,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_loads" type="object" class="oe_stat_button" icon="fa-download">
                            <field name="load_count" widget="statinfo" string="Yüklemeler"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Aktif Değil" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="card_id" required="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="monthly_amount" required="1"/>
                            <field name="allocation_day" required="1"/>
                        </group>
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="end_date"/>
                            <field name="allocation_date" readonly="1"/>
                            <field name="next_allocation_date" readonly="1"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group string="Açıklama">
                        <field name="note" nolabel="1" placeholder="Açıklama ekleyin..."/>
                    </group>
                    <notebook>
                        <page string="Yüklemeler">
                            <field name="load_ids" readonly="1">
                                <tree>
                                    <field name="load_date"/>
                                    <field name="amount"/>
                                    <field name="used_amount"/>
                                    <field name="remaining_amount"/>
                                    <field name="transaction_count"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_cafeteria_monthly_allocation_search" model="ir.ui.view">
        <field name="name">cafeteria.monthly.balance.allocation.search</field>
        <field name="model">cafeteria.monthly.balance.allocation</field>
        <field name="arch" type="xml">
            <search string="Aylık Tahsisler">
                <field name="card_id"/>
                <field name="partner_id"/>
                <filter name="filter_active" string="Aktif" domain="[('state', '=', 'active')]"/>
                <filter name="filter_suspended" string="Askıya Alındı" domain="[('state', '=', 'suspended')]"/>
                <filter name="filter_completed" string="Tamamlandı" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter name="filter_active_records" string="Aktif Kayıtlar" domain="[('active', '=', True)]"/>
                <group expand="0" string="Grupla">
                    <filter name="group_card" string="Kart" context="{'group_by': 'card_id'}"/>
                    <filter name="group_partner" string="Müşteri" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_state" string="Durum" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_cafeteria_balance_load" model="ir.actions.act_window">
        <field name="name">Bakiye Yüklemeleri</field>
        <field name="res_model">cafeteria.card.balance.load</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Kart bakiye yüklemesi oluşturun
            </p>
            <p>
                Kartlara bakiye yükleyerek kullanıcıların catering hizmetlerinden yararlanmasını sağlayabilirsiniz.
            </p>
        </field>
    </record>

    <record id="action_cafeteria_monthly_allocation" model="ir.actions.act_window">
        <field name="name">Aylık Bakiye Tahsisleri</field>
        <field name="res_model">cafeteria.monthly.balance.allocation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aylık otomatik bakiye tahsisi oluşturun
            </p>
            <p>
                Kartlara düzenli aralıklarla otomatik bakiye yüklenmesini ayarlayabilirsiniz.
            </p>
        </field>
    </record>

</odoo>
