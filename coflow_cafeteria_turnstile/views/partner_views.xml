<odoo>
  <record id="view_partner_form_inherit_cafeteria" model="ir.ui.view">
    <field name="name">res.partner.form.cafeteria</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <div name="button_box" position="inside">
        <button name="%(action_open_cafeteria_invoice_wizard)d"
                string="Catering FaturasÄ±"
                type="action"
                class="oe_stat_button"
                icon="fa-cutlery"
                context="{'default_partner_id': active_id}"/>
      </div>
      <sheet position="inside">
        <notebook position="inside">
          <page string="Catering KartlarÄ±">
            <field name="cafeteria_card_ids" context="{'default_partner_id': active_id}">
              <tree editable="bottom">
                <field name="name"/>
                <field name="card_type"/>
                <field name="balance"/>
                <field name="transaction_count" readonly="1"/>
              </tree>
              <form>
                <group>
                  <field name="name"/>
                  <field name="partner_id"/>
                  <field name="card_type"/>
                  <field name="balance"/>
                  <field name="note"/>
                </group>
              </form>
            </field>
          </page>
        </notebook>
      </sheet>
    </field>
  </record>
</odoo>
