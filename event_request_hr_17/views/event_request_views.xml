<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action & Menu (under Employees) -->
    <record id="action_event_request" model="ir.actions.act_window">
        <field name="name">Etkinlik Talepleri</field>
        <field name="res_model">event.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Put under Employees (HR) root menu -->
    <menuitem id="menu_event_request_root" name="Etkinlik Talepleri" parent="hr.menu_hr_root" sequence="90"/>
    <menuitem id="menu_event_request_records" name="Kayıtlar" parent="menu_event_request_root" action="action_event_request" sequence="10"/>

    <!-- Tree View -->
    <record id="view_event_request_tree" model="ir.ui.view">
        <field name="name">event.request.tree</field>
        <field name="model">event.request</field>
        <field name="arch" type="xml">
            <tree string="Etkinlik Talepleri" default_order="event_date desc">
                <field name="employee_id"/>
                <field name="event_name"/>
                <field name="event_date"/>
                <field name="event_location"/>
                <field name="event_type_ids" widget="many2many_tags"/>
                <field name="state" widget="badge"
                    decoration-info="state in ['submitted']"
                    decoration-success="state in ['approved','done']"
                    decoration-danger="state in ['cancel']"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View with Chatter + statusbar -->
    <record id="view_event_request_form" model="ir.ui.view">
        <field name="name">event.request.form</field>
        <field name="model">event.request</field>
        <field name="arch" type="xml">
            <form string="Etkinlik Talebi">
            <header>
    <!-- Sadece taslakta -->
    <button name="action_submit" type="object" string="Gönder" class="btn-primary"
            states="draft"/>

    <!-- Sadece gönderildiyken -->
    <button name="action_approve" type="object" string="Onayla"
            states="submitted"/>

    <!-- Sadece onaylandıktan sonra -->
    <button name="action_done" type="object" string="Tamamlandı"
            states="approved"/>

    <!-- Taslak, gönderildi veya onaylandı durumlarında -->
    <button name="action_cancel" type="object" string="İptal"
            states="draft,submitted,approved"/>

    <!-- Sadece iptal durumunda -->
    <button name="action_reset_to_draft" type="object" string="Taslağa Al"
            states="cancel"/>

    <field name="state" widget="statusbar"
           statusbar_visible="draft,submitted,approved,done,cancel"/>
</header>

             <sheet>
  <group>
    <group>
      <!-- Readonly outside draft -->
      <field name="employee_id" options="{'no_quick_create': True}"
             states="{'submitted':[('readonly', True)],
                      'approved':[('readonly', True)],
                      'done':[('readonly', True)],
                      'cancel':[('readonly', True)]}"/>

      <field name="event_name"
             states="{'submitted':[('readonly', True)],
                      'approved':[('readonly', True)],
                      'done':[('readonly', True)],
                      'cancel':[('readonly', True)]}"/>

      <field name="event_date"
             states="{'submitted':[('readonly', True)],
                      'approved':[('readonly', True)],
                      'done':[('readonly', True)],
                      'cancel':[('readonly', True)]}"/>

      <!-- Readonly after submitted -->
      <field name="event_location"
             states="{'approved':[('readonly', True)],
                      'done':[('readonly', True)],
                      'cancel':[('readonly', True)]}"/>
    </group>

    <group>
      <!-- Readonly after submitted -->
      <field name="event_type_ids" widget="many2many_tags"
             states="{'approved':[('readonly', True)],
                      'done':[('readonly', True)],
                      'cancel':[('readonly', True)]}"/>

      <!-- Invisible if any tag selected; readonly after submitted -->
      <field name="event_type_other"
             attrs="{'invisible': [('event_type_ids','!=', False)]}"
             states="{'approved':[('readonly', True)],
                      'done':[('readonly', True)],
                      'cancel':[('readonly', True)]}"/>
    </group>
  </group>

  <group>
    <group>
      <field name="attendance_status_ids" widget="many2many_tags"
             states="{'approved':[('readonly', True)],
                      'done':[('readonly', True)],
                      'cancel':[('readonly', True)]}"/>

      <field name="attendance_status_other"
             states="{'approved':[('readonly', True)],
                      'done':[('readonly', True)],
                      'cancel':[('readonly', True)]}"/>
    </group>

    <group>
      <field name="access_option_ids" widget="many2many_tags"
             states="{'approved':[('readonly', True)],
                      'done':[('readonly', True)],
                      'cancel':[('readonly', True)]}"/>

      <field name="access_option_other"
             states="{'approved':[('readonly', True)],
                      'done':[('readonly', True)],
                      'cancel':[('readonly', True)]}"/>
    </group>
  </group>

  <group>
    <!-- Readonly only when done or cancel -->
    <field name="notes" colspan="4"
           states="{'done':[('readonly', True)],
                    'cancel':[('readonly', True)]}"/>
  </group>
</sheet>


                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
