<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Helpdesk Ticket Form View - Add AI Analysis Fields -->
    <record id="view_helpdesk_ticket_form_inherit_coflow" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit.coflow</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="odoo_website_helpdesk.support_ticket_view_form"/>
        <field name="arch" type="xml">
            <!-- Add AI Analyze button in header -->
            <xpath expr="//header" position="inside">
                <button name="action_analyze_with_ai"
                        string="AI Analyze"
                        type="object"
                        class="btn-primary"
                        attrs="{'invisible': [('ai_analysis_status', '=', 'analyzing')]}"/>
                <field name="ai_analysis_status" widget="statusbar"
                       statusbar_visible="pending,analyzing,completed"/>
            </xpath>

            <!-- Add AI enable field in main form -->
            <xpath expr="//sheet" position="before">
                <field name="enable_ai_analysis" invisible="1"/>
            </xpath>

            <!-- Add AI Analysis page in notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="AI Analysis" name="ai_analysis">
                    <group>
                        <group string="Complexity Analysis">
                            <field name="ai_complexity_score" widget="progressbar"/>
                            <field name="ai_complexity_level" widget="badge"
                                   decoration-success="ai_complexity_level == 'low'"
                                   decoration-info="ai_complexity_level == 'medium'"
                                   decoration-warning="ai_complexity_level == 'high'"
                                   decoration-danger="ai_complexity_level == 'critical'"/>
                            <field name="ai_estimated_hours"/>
                            <field name="ai_analysis_date"/>
                        </group>
                        <group string="Similar Tickets">
                            <field name="similar_tickets_count"/>
                            <button name="action_view_analysis_history"
                                    string="View Analysis History"
                                    type="object"
                                    class="btn-link"/>
                        </group>
                    </group>

                    <group string="AI Solution Suggestion" attrs="{'invisible': [('ai_solution_suggestion', '=', False)]}">
                        <field name="ai_solution_suggestion" nolabel="1" widget="html"/>
                    </group>

                    <group string="AI Code Suggestion" attrs="{'invisible': [('ai_code_suggestion', '=', False)]}">
                        <field name="ai_code_suggestion" nolabel="1" widget="ace" options="{'mode': 'python'}"/>
                    </group>

                    <group string="GitHub Integration" attrs="{'invisible': [('github_pr_url', '=', False)]}">
                        <field name="github_issue_url" widget="url"/>
                        <field name="github_pr_url" widget="url"/>
                        <field name="github_commit_sha"/>
                        <button name="action_view_github_pr"
                                string="Open GitHub PR"
                                type="object"
                                class="btn-primary"
                                attrs="{'invisible': [('github_pr_url', '=', False)]}"/>
                    </group>

                    <group string="Error Details" attrs="{'invisible': [('ai_error_message', '=', False)]}">
                        <field name="ai_error_message" nolabel="1" widget="text"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Helpdesk Ticket Tree View - Add AI fields -->
    <record id="view_helpdesk_ticket_tree_inherit_coflow" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tree.inherit.coflow</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="odoo_website_helpdesk.support_ticket_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-info">ai_complexity_level == 'low'</attribute>
                <attribute name="decoration-warning">ai_complexity_level == 'high'</attribute>
                <attribute name="decoration-danger">ai_complexity_level == 'critical'</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="ai_complexity_score" optional="show"/>
                <field name="ai_complexity_level" optional="show" widget="badge"/>
                <field name="ai_estimated_hours" optional="hide"/>
                <field name="ai_analysis_status" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Helpdesk Ticket Search View - Add AI filters -->
    <record id="view_helpdesk_ticket_search_inherit_coflow" model="ir.ui.view">
        <field name="name">helpdesk.ticket.search.inherit.coflow</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="odoo_website_helpdesk.support_ticket_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <filter string="Low Complexity" name="low_complexity"
                        domain="[('ai_complexity_level', '=', 'low')]"/>
                <filter string="Medium Complexity" name="medium_complexity"
                        domain="[('ai_complexity_level', '=', 'medium')]"/>
                <filter string="High Complexity" name="high_complexity"
                        domain="[('ai_complexity_level', '=', 'high')]"/>
                <filter string="Critical Complexity" name="critical_complexity"
                        domain="[('ai_complexity_level', '=', 'critical')]"/>
                <separator/>
                <filter string="AI Analyzed" name="ai_analyzed"
                        domain="[('ai_analysis_status', '=', 'completed')]"/>
                <filter string="Pending AI Analysis" name="pending_ai"
                        domain="[('ai_analysis_status', '=', 'pending')]"/>
                <filter string="AI Analysis Error" name="ai_error"
                        domain="[('ai_analysis_status', '=', 'error')]"/>
                <separator/>
                <filter string="Has GitHub PR" name="has_github_pr"
                        domain="[('github_pr_url', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="AI Complexity Level" name="group_complexity"
                            context="{'group_by': 'ai_complexity_level'}"/>
                    <filter string="AI Analysis Status" name="group_ai_status"
                            context="{'group_by': 'ai_analysis_status'}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
