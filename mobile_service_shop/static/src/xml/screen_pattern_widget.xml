<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="mobile_service_shop.ScreenPatternWidget">
        <div class="o_screen_pattern_widget">
            <t t-if="props.readonly">
                <t t-if="props.value">
                    <img class="o_screen_pattern_preview"
                         t-att-src="'data:image/png;base64,' + props.value"
                         alt="Screen pattern"/>
                </t>
                <t t-else="">
                    <span class="o_screen_pattern_placeholder text-muted">Desen yok</span>
                </t>
            </t>
            <t t-else="">
                <canvas t-ref="canvas"></canvas>
                <div class="o_screen_pattern_controls">
                    <button type="button" class="btn btn-sm btn-secondary"
                            t-on-click="onClear">
                        Temizle
                    </button>
                </div>
            </t>
        </div>
    </t>
</templates>
