<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_send_daily_reports" model="ir.cron">
        <field name="name">Send Daily Project Reports</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="state">code</field>
        <field name="code">model.cron_send_daily_reports()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
        <field name="priority">5</field>
    </record>

    <record id="ir_cron_send_weekly_reports" model="ir.cron">
        <field name="name">Send Weekly Project Reports</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="state">code</field>
        <field name="code">model.cron_send_weekly_reports()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
        <field name="priority">5</field>
    </record>
</odoo>
